<h1>Sign Up</h1>

<%= form_for(@user, url:'/signup') do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :email %>
    <%= f.email_field :email, required: true %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Submit" %>

<% end %>